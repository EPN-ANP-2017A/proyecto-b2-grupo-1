{% extends 'base.html.twig' %}

{% block body %}
    <h1>Aplicacion</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ aplicacion.id }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{% if aplicacion.estado %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{% if aplicacion.fecha %}{{ aplicacion.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('aplicacion_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('aplicacion_edit', { 'id': aplicacion.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

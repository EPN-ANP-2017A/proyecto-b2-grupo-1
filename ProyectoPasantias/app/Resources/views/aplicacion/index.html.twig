{% extends 'base.html.twig' %}

{% block body %}
   
    {{ parent() }}
    <div class="container">
        <div class="cold-md-12">
            <div class="page-header margin-none">
                <h1>Lista de Aplicaciones</h1>
            </div>
            <div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Estado</th>
                <th>Fecha</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for aplicacion in aplicacions %}
            <tr>
                <td><a href="{{ path('aplicacion_show', { 'id': aplicacion.id }) }}">{{ aplicacion.id }}</a></td>
                <td>{% if aplicacion.estado %}Yes{% else %}No{% endif %}</td>
                <td>{% if aplicacion.fecha %}{{ aplicacion.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('aplicacion_show', { 'id': aplicacion.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('aplicacion_edit', { 'id': aplicacion.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('aplicacion_new') }}">Create a new aplicacion</a>
        </li>
    </ul>
    </div>
        </div>
        </div>
{% endblock %}

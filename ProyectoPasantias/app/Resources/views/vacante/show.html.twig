{% extends 'base.html.twig' %}

{% block body %}
    <h1>Vacante</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vacante.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ vacante.nombre }}</td>
            </tr>
            <tr>
                <th>Apellido</th>
                <td>{{ vacante.apellido }}</td>
            </tr>
            <tr>
                <th>Telefono</th>
                <td>{{ vacante.telefono }}</td>
            </tr>
            <tr>
                <th>Especialidad</th>
                <td>{{ vacante.especialidad }}</td>
            </tr>
            <tr>
                <th>Universidad</th>
                <td>{{ vacante.universidad }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('vacante_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('vacante_edit', { 'id': vacante.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

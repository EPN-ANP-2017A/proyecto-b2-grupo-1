{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="cold-md-12">
            <div class="page-header margin-none">
                <h1>Lista de Areas</h1>
            </div>
            <div class="table-responsive">

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for area in areas %}
            <tr>
                <td><a href="{{ path('area_show', { 'id': area.id }) }}">{{ area.id }}</a></td>
                <td>{{ area.nombre }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('area_show', { 'id': area.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('area_edit', { 'id': area.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('area_new') }}">Create a new area</a>
        </li>
    </ul>
    </div>
        </div>
        </div>
{% endblock %}
